#!/bin/ksh
#
# $OpenBSD: honk.rc,v 1.4 2021/01/16 23:42:57 abieber Exp $

daemon="${TRUEPREFIX}/bin/honk"
daemon_flags="-datadir ${VARBASE}/honk -viewdir ${VARBASE}/honk"
daemon_user="_honk"

. /etc/rc.d/rc.subr

rc_bg=YES
rc_reload=NO

rc_start() {
	${rcexec} "${daemon} ${daemon_flags} 2>&1 |
		logger -p daemon.info -t honk"
}

rc_stop() {
	pkill -T "${daemon_rtable}" -U "${daemon_user}" -x honk
}

rc_cmd $1
